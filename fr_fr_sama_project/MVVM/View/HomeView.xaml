<UserControl x:Class="fr_fr_sama_project.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:fr_fr_sama_project.MVVM.View"
             xmlns:clock="clr-namespace:SystemTimeAndDate;assembly=SystemTimeAndDate"

             mc:Ignorable="d"
             d:DesignHeight="525" d:DesignWidth="720">
    
    <StackPanel>
        <TextBlock Text="صفحه اصلی"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Right"
                   Margin="0,10,0,20"/>
        
        <StackPanel Orientation="Horizontal">
            <Border Height="200"
                    Width="400"
                    Margin="25,0,30,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#5bc3ff" Offset="0.0"/>
                        <GradientStop Color="#3a43ff" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <Border.Clip>
                    <RectangleGeometry RadiusX="20"
                                       RadiusY="20"
                                       Rect="0,0,400,200"/>
                </Border.Clip>
                
                <Grid>
                    <StackPanel>
                        <TextBlock Text="تعداد دانشجویان فعال"
                                   Foreground="White"
                                   FontSize="28"
                                   Margin="0,20,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    <Image Source="/Images/Student.png"
                           Width="250"
                           Height="250"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"
                           Margin="-50,10,10,-75"/>
                </Grid>
                
            </Border>
            
            <Border Width="200"
                    Height="200"
                    CornerRadius="20"
                    Margin="45,0,0,0">
                <StackPanel>
                    <TextBlock Text="تاریخ و ساعت"
                               Foreground="White"
                               FontSize="44"
                               Margin="0,0,0,0"
                               HorizontalAlignment="Center"
                               FontFamily="/Fonts/#IranNastaliq">
                    </TextBlock>
                    <clock:ClockControl HorizontalAlignment="Center" 
                                        VerticalAlignment="Top" 
                                        Margin="0,0,0,20"/>
                    <!--
                    <Image Source="/Images/clock.png"
                           Width="250"
                           Height="250"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Opacity="0.2"
                           Margin="0,-35"/>
                           -->
                    
                </StackPanel>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#FFe85C00" Offset="0.0"/>
                        <GradientStop Color="#FFFFf726" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                
            </Border>
        </StackPanel>
        
        <StackPanel>
            
            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="25,0,0,0"></Setter>
                </Style>
            </StackPanel.Resources>
            
            <TextBlock Text="سامانه های دانشجویی"
                       HorizontalAlignment="Right"
                       Foreground="White"
                       FontSize="18"
                       Margin="0,5,5,5"
            />
            
            <StackPanel Height="145" Margin="5"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                <Button Height="150"
                        Width="150"
                        Margin="25,0,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        FocusVisualStyle="{x:Null}"
                        IsTabStop="False"
                        Cursor="Hand"
                        Name="DormitoryBTN"
                        Click="DormitoryBTN_OnClick">
    
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                
                                <Border Width="140"
                                        Height="135"
                                        Margin="0,0,5,11"
                                        CornerRadius="20"
                                        Background="#B3E5FC" >
                                    <StackPanel Orientation="Vertical">
                                        <Image Source="/Images/dormitory.png"
                                               Margin="30,5,30,30"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Stretch">
                                        </Image>
                                        <TextBlock Text="اتوماسیون خوابگاه"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontSize="18"
                                                   Margin="0,-20,0,0">
                                            
                                        </TextBlock>
                                        
                                    </StackPanel>
                                </Border>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Height="150"
                        Width="150"
                        Margin="25,0,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        FocusVisualStyle="{x:Null}"
                        IsTabStop="False"
                        Cursor="Hand"
                        Name="FoodBTN"
                        Click="FoodBTN_OnClick">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                
                                <Border Width="140"
                                        Height="135"
                                        Margin="0,0,5,11"
                                        CornerRadius="20"
                                        Background="#B3E5FC" >
                                    <StackPanel Orientation="Vertical">
                                        <Image Source="/Images/food.png"
                                               Margin="30,5,30,30"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Stretch">
                                        </Image>
                                        <TextBlock Text="اتوماسیون تعذیه"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontSize="18"
                                                   Margin="0,-20,0,0">
                                            
                                        </TextBlock>
                                        
                                    </StackPanel>
                                </Border>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Height="150"
                        Width="150"
                        Margin="25,0,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        FocusVisualStyle="{x:Null}"
                        IsTabStop="False"
                        Cursor="Hand"
                        Name="EmailBTN"
                        Click="EmailBTN_OnClick">
                    
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                
                                <Border Width="140"
                                        Height="135"
                                        Margin="0,0,5,11"
                                        CornerRadius="20"
                                        Background="#B3E5FC" >
                                    <StackPanel Orientation="Vertical">
                                        <Image Source="/Images/E-Mail.png"
                                               Margin="30,5,30,30"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Stretch">
                                        </Image>
                                        <TextBlock Text="پست الکترونیک"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontSize="18"
                                                   Margin="0,-20,0,0">
                                            
                                        </TextBlock>
                                        
                                    </StackPanel>
                                </Border>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Height="150"
                        Width="150"
                        Margin="25,0,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        FocusVisualStyle="{x:Null}"
                        IsTabStop="False"
                        Cursor="Hand"
                        Name="SiteBTN"
                        Click="SiteBTN_OnClick">
    
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                
                                <Border Width="140"
                                        Height="135"
                                        Margin="0,0,5,11"
                                        CornerRadius="20"
                                        Background="#B3E5FC" >
                                    <StackPanel Orientation="Vertical">
                                        <Image Source="/Images/logoAsli.png"
                                               Margin="30,5,30,30"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Stretch">
                                        </Image>
                                        <TextBlock VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontSize="18"
                                                   Margin="0,-20,0,0">
                                            
                                        </TextBlock>
                                        
                                    </StackPanel>
                                </Border>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
