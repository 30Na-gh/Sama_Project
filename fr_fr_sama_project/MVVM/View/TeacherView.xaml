<UserControl x:Class="fr_fr_sama_project.MVVM.View.TeacherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:fr_fr_sama_project.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="525" 
             d:DesignWidth="720"
             Background="Transparent">
    <StackPanel>
        <TextBlock Text="مدیریت اساتید"
                   Foreground="White"
                   FontSize="28"
                   FontFamily="/Fonts/#Vazir"
                   HorizontalAlignment="Right"
                   Margin="0,10,0,20"/>
        
            <StackPanel Orientation="Horizontal">
                
                <Border Width="500"
                        Height="300"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="15,0,0,0">
                    <DataGrid Background="WhiteSmoke"
                              Foreground="Black"
                              Name="TeacherDg"
                              Loaded="TeacherDg_OnLoaded"
                              SelectionChanged="TeacherDg_OnSelectionChanged">
                    
                    </DataGrid>
                </Border>
                <Border HorizontalAlignment="Right"
                        Width="150"
                        Height="350"
                        Margin="30,0,0,0"
                        Background="Transparent">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text=": شماره استاد"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,7,0,9.375"/>
                        <TextBox Name="TeacherIdTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,7,0,9.375"
                                 Cursor="IBeam"/>
                        <TextBlock Text=": نام استاد"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,7,0,9.375"/>
                        <TextBox Name="TeacherNameTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,7,0,9.375"
                                 Cursor="IBeam"/>
                        <TextBlock Text=":نام خانوادگی استاد"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,7,0,9.375"/>
                        <TextBox Name="TeacherFamilyTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,7,0,9.375"
                                 Cursor="IBeam"/>
                        <TextBlock Text=": درجه علمی استاد"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,7,0,9.375"/>
                        <TextBox Name="TeacherDegree"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,7,0,9.375"
                                 Cursor="IBeam"/>
                        <TextBlock Text=": حقوق"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,7,0,9.375"/>
                        <TextBox Name="TeacherSalaryTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,7,0,9.375"
                                 Cursor="IBeam"
                                 TextChanged="TeacherSalaryTb_OnTextChanged"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Style="{StaticResource RoundedButton}"
                    Content="نمایش" 
                    Width="493"
                    Margin="15,15,3,15"
                    Name="ShowTeacherBtn"
                    Click="ShowTeacherBtn_OnClick"/>
            <Button Style="{StaticResource RoundedButton}"
                    Content="ویرایش"
                    Width="70"
                    Margin="15,15,10,15"
                    Name = "EditTeacherBtn"
                    Click="EditTeacherBtn_OnClick"/>
            
            <Button Style="{StaticResource RoundedButton}"
                    Content="افزودن"
                    Width="70"
                    Margin="15,15,10,15"
                    Name="AddTeacherBtn"
                    Click="AddTeacherBtn_OnClick">
                
            </Button>
            
        </StackPanel>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <TextBox Width="300"
                     Height="30"
                     Name="ModernSearch"
                     TextChanged="ModernSearch_OnTextChanged"/>
            <Button Style="{StaticResource RoundedButton}"
                    Content="پاک کردن"
                    Width="70"
                    Margin="15,15,10,15"
                    Name="CleanBtn"
                    Click="CleanBtn_OnClick"/>
            <Button Style="{StaticResource RoundedButton}"
                    Content="جست و جو"
                    Width="70"
                    Margin="15,15,10,15"
                    FontSize="13"
                    Name="SearchTeacherBtn"
                    Click="SearchTeacherBtn_OnClick"/>
            <Button Style="{StaticResource RoundedButton}"
                    Content="حذف" 
                    Width="70"
                    Margin="15,15,10,15"
                    Name="DeleteTeacherBtn"
                    Click="DeleteTeacherBtn_OnClick"/>
        </StackPanel>
    </StackPanel>
</UserControl>
