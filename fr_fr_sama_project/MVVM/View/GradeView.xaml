<UserControl x:Class="fr_fr_sama_project.MVVM.View.GradeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:fr_fr_sama_project.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="525" d:DesignWidth="720"
             Background="Transparent">
    <StackPanel>
        <TextBlock Text="مدیریت نمرات"
                   Foreground="White"
                   FontSize="28"
                   FontFamily="/Fonts/#Vazir"
                   HorizontalAlignment="Right"
                   Margin="0,10,0,20"/>
        
            <StackPanel Orientation="Horizontal">
                
                <Border Width="500"
                        Height="300"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="15,0,0,0">
                    <DataGrid Background="WhiteSmoke"
                              Foreground="Black"
                              Name="GradeDg"
                              Loaded="GradeDg_OnLoaded">
                    
                    </DataGrid>
                </Border>
                <Border HorizontalAlignment="Right"
                        Width="150"
                        Height="350"
                        Margin="30,0,0,0"
                        Background="Transparent">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text=": شماره دانشجو"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,7,0,9.375"/>
                        <ComboBox Name="StudentIdCb"
                                  HorizontalAlignment="Left"
                                  Width="130"
                                  Margin="0,7,0,9.375"
                                  DropDownOpened="StudentIdCb_OnDropDownOpened"/>
                        <TextBlock Text=": شماره استاد"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,7,0,9.375"/>
                        <ComboBox Name="TeacherIdCb"
                                  HorizontalAlignment="Left"
                                  Width="130"
                                  Margin="0,7,0,9.375"
                                  DropDownOpened="TeacherIdCb_OnDropDownOpened"/>
                        <TextBlock Text=": شماره درس"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,7,0,9.375"/>
                        <ComboBox Name="CourseIdCb"
                                  DisplayMemberPath="DisplayInfo" 
                                  SelectedValuePath="ID"
                                  HorizontalAlignment="Left"
                                  Width="130"
                                  Margin="0,7,0,9.375"
                                  DropDownOpened="CourseIdCb_OnDropDownOpened"/>
                        <TextBlock Text=": شماره ترم"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,7,0,9.375"/>
                        <TextBox Name="TermNoTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,7,0,9.375"
                                 Cursor="IBeam"/>
                        <TextBlock Text=": نمره"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,7,0,9.375"/>
                        <TextBox Name="GradeTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,7,0,9.375"
                                 Cursor="IBeam"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Style="{StaticResource RoundedButton}"
                    Content="نمایش" 
                    Width="493"
                    Margin="15,15,3,15"
                    />
            <Button Style="{StaticResource RoundedButton}"
                    Content="ویرایش"
                    Width="70"
                    Margin="15,15,10,15"/>
            
            <Button Style="{StaticResource RoundedButton}"
                    Content="افزودن"
                    Width="70"
                    Margin="15,15,10,15"
                    Name="AddGradeBtn"
                    Click="AddGradeBtn_OnClick">
                
            </Button>
            
        </StackPanel>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Style="{StaticResource RoundedButton}"
                    Content="جست و جو"
                    Width="70"
                    Margin="15,15,10,15"/>
            <Button Style="{StaticResource RoundedButton}"
                    Content="حذف" 
                    Width="70"
                    Margin="15,15,10,15"/>
        </StackPanel>
    </StackPanel>
</UserControl>
