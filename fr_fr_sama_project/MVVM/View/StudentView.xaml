<UserControl x:Class="fr_fr_sama_project.MVVM.View.StudentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:fr_fr_sama_project.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="525" 
             d:DesignWidth="720"
             Background="Transparent">
    
    <StackPanel>
        <TextBlock Text="مدیریت دانشجویان"
                   Foreground="White"
                   FontSize="28"
                   FontFamily="/Fonts/#Vazir"
                   HorizontalAlignment="Right"
                   Margin="0,10,0,20"/>
        
            <StackPanel Orientation="Horizontal">
                
                <Border Width="500"
                        Height="300"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="15,0,0,0">
                    <DataGrid Background="WhiteSmoke"
                              Foreground="Black"
                              Name="StudentDg"
                              Loaded="StudentDg_OnLoaded"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              SelectionChanged="StudentDg_OnSelectionChanged">
                    </DataGrid>
                </Border>
                <Border HorizontalAlignment="Right"
                        Width="150"
                        Height="300"
                        Margin="30,0,0,0"
                        Background="Transparent">
                    <StackPanel Orientation="Vertical"
                                >
                        <TextBlock Text=": شماره دانشجویی"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,9.375,0,9.375"/>
                        <TextBox Name="StudentIdTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,9.375,0,9.375"
                                 Cursor="IBeam"/>
                        <TextBlock Text=": نام دانشجو"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,9.375,0,9.375"/>
                        <TextBox Name="StudentNameTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,9.375,0,9.375"
                                 Cursor="IBeam"/>
                        <TextBlock Text=": نام خانوادگی دانشجو"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,9.375,0,9.375"/>
                        <TextBox Name="StudentFamilyTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,9.375,0,9.375"
                                 Cursor="IBeam"/>
                        <TextBlock Text=": رشته تحصیلی"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,9.375,0,9.375"/>
                        <TextBox Name="StudentField"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,9.375,0,9.375"
                                 Cursor="IBeam"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Style="{StaticResource RoundedButton}"
                    Content="نمایش" 
                    Width="493"
                    Margin="15,15,3,15"
                    Name="StudentShowBtn"
                    Click="StudentShowBtn_OnClick"/>
            <Button Style="{StaticResource RoundedButton}"
                    Content="ویرایش"
                    Width="70"
                    Margin="15,15,10,15"
                    Name="EditStudentBtn"
                    Click="EditStudentBtn_OnClick"/>
            
            <Button Style="{StaticResource RoundedButton}"
                    Content="افزودن"
                    Width="70"
                    Margin="15,15,10,15"
                    Name="AddStudentBtn"
                    Click="AddStudentBtn_OnClick">
                
            </Button>
            
        </StackPanel>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <TextBox Width="300"
                     Height="30"
                     Name="ModernSearch"
                     TextChanged="ModernSearch_OnTextChanged"/>
            <Button Style="{StaticResource RoundedButton}" 
                    Width="70"
                    Margin="15,10,10,15"
                    Content="پاک کردن"
                    Name="CleanBtn"
                    Click="CleanBtn_OnClick"/>
            <Button Style="{StaticResource RoundedButton}"
                    Content="جست و جو"
                    Width="70"
                    Margin="15,15,10,15"
                    Click="SearchStudentBtn_OnClick"
                    FontSize="12"/>
            <Button Style="{StaticResource RoundedButton}"
                    Content="حذف" 
                    Width="70"
                    Margin="15,15,10,15"
                    Click="StudentDeleteBtn_OnClick"
                    Name="StudentDeleteBtn"/>
            
        </StackPanel>
    </StackPanel>
</UserControl>
