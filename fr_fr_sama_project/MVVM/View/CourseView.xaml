<UserControl x:Class="fr_fr_sama_project.MVVM.View.CourseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="525" 
             d:DesignWidth="720"
             Background="Transparent">
    <StackPanel>
        <TextBlock Text="مدیریت دروس"
                   Foreground="White"
                   FontSize="28"
                   FontFamily="/Fonts/#Vazir"
                   HorizontalAlignment="Right"
                   Margin="0,10,0,20"/>
        
            <StackPanel Orientation="Horizontal">
                
                <Border Width="500"
                        Height="300"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="15,0,0,0">
                    <DataGrid Background="WhiteSmoke"
                              Foreground="Black"
                              Name="CourseDg"
                              Loaded="CourseDg_OnLoaded"
                              SelectionChanged="CourseDg_OnSelectionChanged">
                    
                    </DataGrid>
                </Border>
                <Border HorizontalAlignment="Right"
                        Width="150"
                        Height="300"
                        Margin="30,0,0,0"
                        Background="Transparent">
                    <StackPanel Orientation="Vertical"
                                >
                        <TextBlock Text=": شماره درس"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,9.375,0,9.375"/>
                        <TextBox Name="CourseIdTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,9.375,0,9.375"
                                 Cursor="IBeam"/>
                        <TextBlock Text=": نام درس"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,9.375,0,9.375"/>
                        <TextBox Name="CourseNameTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,9.375,0,9.375"
                                 Cursor="IBeam"/>
                        <TextBlock Text=": نوع درس"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,9.375,0,9.375"/>
                        <TextBox Name="CourseTypeTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,9.375,0,9.375"
                                 Cursor="IBeam"/>
                        <TextBlock Text=": تعداد واحد درس"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   FontFamily="/Fonts/#Vazir"
                                   FontSize="14"
                                   Margin="0,9.375,0,9.375"/>
                        <TextBox Name="CourseUnitTb"
                                 HorizontalAlignment="Left"
                                 Width="130"
                                 Margin="0,9.375,0,9.375"
                                 Cursor="IBeam"
                                 TextChanged="CourseUnitTb_OnTextChanged"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Style="{StaticResource RoundedButton}"
                    Content="نمایش" 
                    Width="493"
                    Margin="15,15,3,15"
                    Name="ShowCourseBtn"
                    Click="ShowCourseBtn_OnClick"/>
            <Button Style="{StaticResource RoundedButton}"
                    Content="ویرایش"
                    Width="70"
                    Margin="15,15,10,15"
                    Name="CourseEditBtn"
                    Click="CourseEditBtn_OnClick"/>
            
            <Button Style="{StaticResource RoundedButton}"
                    Content="افزودن"
                    Width="70"
                    Margin="15,15,10,15"
                    Name="AddCourseBtn"
                    Click="AddCourseBtn_OnClick">
                
            </Button>
            
        </StackPanel>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <TextBox Width="300"
                     Height="30"
                     Name="ModernSearch"
                     TextChanged="ModernSearch_OnTextChanged"/>
            <Button Style="{StaticResource RoundedButton}"
                    Content="پاک کردن"
                    Width="70"
                    Margin="15,15,10,15"
                    Name="CleanBtn"
                    Click="CleanBtn_OnClick"/>
            <Button Style="{StaticResource RoundedButton}"
                    Content="جست و جو"
                    Width="70"
                    Margin="15,15,10,15"
                    Name="CourseSearchBtn"
                    Click="CourseSearchBtn_OnClick"/>
            <Button Style="{StaticResource RoundedButton}"
                    Content="حذف" 
                    Width="70"
                    Margin="15,15,10,15"
                    Name="CourseDeleteBtn"
                    Click="CourseDeleteBtn_OnClick"/>
        </StackPanel>
    </StackPanel>
</UserControl>
