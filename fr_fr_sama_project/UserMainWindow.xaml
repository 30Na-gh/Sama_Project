<Window x:Class="fr_fr_sama_project.UserMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:fr_fr_sama_project"
        mc:Ignorable="d"
        Title="UserMainWindow"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Border Background="#0b3571" 
            CornerRadius="20">
                
                <Grid>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid.RowDefinitions>
                                <RowDefinition Height="75"/>
                                <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="سامانه سما" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="White"
                                   FontSize="22" 
                                   Margin="20,0,0,0"
                                   Name="MainWindowDrag"/>
                        
                        <StackPanel Grid.Row="1">
                                <RadioButton Content="صفحه اصلی"
                                             Height="50"
                                             Foreground="White"
                                             FontSize="14"
                                             Style="{StaticResource MenuButtonTheme}"
                                             IsChecked="True"
                                             Command="{Binding HomeViewCommand}"/>
                                
                                <RadioButton Content="مدیریت دانشجویان"
                                             Height="50"
                                             Foreground="White"
                                             FontSize="14"
                                             Style="{StaticResource MenuButtonTheme}"
                                             Command="{Binding StudentViewCommand}"
                                             Name="StManagementBtn"/>
                                
                                <RadioButton Content="مدیریت اساتید"
                                             Height="50"
                                             Foreground="White"
                                             FontSize="14"
                                             Style="{StaticResource MenuButtonTheme}"
                                             Command="{Binding TeacherViewCommand}"/>
                                
                                <RadioButton Content="مدیریت دروس"
                                             Height="50"
                                             Foreground="White"
                                             FontSize="14"
                                             Style="{StaticResource MenuButtonTheme}"
                                             Command="{Binding CourseViewCommand}"/>
                                
                                <RadioButton Content="مدیریت نمرات"
                                             Height="50"
                                             Foreground="White"
                                             FontSize="14"
                                             Style="{StaticResource MenuButtonTheme}"
                                             Command="{Binding GradeViewCommand}"/>
                                <RadioButton Content="خروج"
                                             Height="50"
                                             Foreground="White"
                                             FontSize="14"
                                             Style="{StaticResource MenuButtonTheme}"
                                             Margin="0,160,0,0"
                                             Name="Exit_BTN"
                                             />
                                
                        </StackPanel>
                        
                        <TextBox Width="200"
                                 Height="40"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Left"
                                 Margin="5"
                                 Grid.Column="1"
                                 Style="{StaticResource ModernTextbox}"/>
                       <Image Grid.Row="0"
                              Grid.Column="1"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Right"
                              Source="/Images/logo2.png"
                              Margin="0,5,5,0"/>
                        <ContentControl Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="10"
                                        Content="{Binding CurrentView}">
                        </ContentControl>
                </Grid>
        </Border>
        
</Window>
