<Window x:Class="fr_fr_sama_project.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:fr_fr_sama_project.Login"
        mc:Ignorable="d"
        Title="LoginWindow"
        Height="400" 
        Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="20"
            Background="#0b3571">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0"
                   Source="/Images/login2.png"
                   VerticalAlignment="Bottom"
                   Margin="30"/>
            
            <Border Grid.Row="1">
                <StackPanel Height="200"
                            VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal">
                    <TextBox Width="150"
                             Height="20"
                             VerticalAlignment="Top"
                             HorizontalAlignment="Center"
                             Margin="175,0,0,0"
                             Name="UserNameTb">
                    
                    </TextBox>
                    <TextBlock Text=":نام‌کاربری"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center"
                               Margin="10,0,0,0">
                        
                    </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,20,0,0">
                        <TextBox Width="150"
                                 Height="20"
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Center"
                                 Margin="175,0,0,0"
                                 Name="PassWordTb">
                    
                        </TextBox>
                        <TextBlock Text=":رمز عبور"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Center"
                                   Margin="10,0,0,0">
                        
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="20">
                        <Button Width="60"
                                Height="20"
                                Margin="0,0,17,0"
                                Content="خروج"
                                FontFamily="/Fonts/#Vazir"
                                Style="{StaticResource RoundedButton}"
                                Name="ExitBtn"
                                Click="ExitBtn_OnClick"/>
                        <Button Width="60"
                                Height="20"
                                Margin="17,0,0,0"
                                Content="ورود"
                                FontFamily="/Fonts/#Vazir"
                                Style="{StaticResource RoundedButton}"
                                Name="LoginBtn"
                                Click="LoginBtn_OnClick"/>

                    </StackPanel>
                </StackPanel>
            </Border>
            
            
        </Grid>
        
    </Border>
</Window>
